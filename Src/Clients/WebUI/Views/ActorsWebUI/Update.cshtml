@model TeamProject.Clients.WebUI.Models.ActorViewModel

@{
    ViewData["Title"] = "UpdateActor";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet"/>
<h1>UpdateActor</h1>

<h4>ActorReturnModel</h4>
<hr/>
<div class="row bg-dark" id="actorUpdate_id">
    <div class="col-md-4 col-lg-4 col-sm-4 col-xl-4">
        <form asp-action="UpdateActor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden="hidden">

                <input asp-for="Actor.ActorId" class="form-control"/>

            </div>
            <div class="form-group ">
                <label asp-for="Actor.FirstName" class="text-light"></label>
                <input asp-for="Actor.FirstName" class="form-control"/>
                <span asp-validation-for="Actor.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Actor.LastName" class="text-light"></label>
                <input asp-for="Actor.LastName" class="form-control"/>
                <span asp-validation-for="Actor.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Actor.Birthday" class="text-light"></label>
                <input asp-for="Actor.Birthday" class="form-control"/>
                <span asp-validation-for="Actor.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-info"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Actors">Back to List</a>
</div>

@section Styles {
    <link href="~/css/actors-update.css" rel="stylesheet"/>
}