@using TeamProject.Clients.WebUI.Common.Pagination
@model TeamProject.Clients.WebUI.Common.Pagination.Models.ViewModels.ActorsBindingModelViewModel

<p>
    <a asp-action="AddActor" class="btn btn-dark">Create New</a>
</p>

<div class="row mt-3">
    <div class="offset-md-2"></div>
    <div class="col-md-8">
        <table class="table table-bordered">
            <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                    @Html.DisplayName("Last Name")
                </th>
                <th>
                    Actions
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.EntitiesPerPage)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "UpdateActor", new {id = item.ActorId}, new {@class = "btn btn-info"})
                        @Html.ActionLink("More", "More", new {id = item.ActorId}, new {@class = "btn btn-info"})
                        <a data-id="@item.ActorId" class="btn btn-danger btn-cmd-delete" asp-controller="ActorsWebUi" asp-action="DeleteActor">Delete</a>

                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="offset-md-2"></div>
</div>

<div class="pagination">
    @Html.PagingButtons(Model.PagingInfo)
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
<script src="~/js/softDeleter.js"></script>
<script src="~/js/actors-index.js"></script>