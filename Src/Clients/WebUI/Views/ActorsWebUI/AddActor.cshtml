@model TeamProject.Clients.Common.Models.Storage.Actor.ActorBindingModel

@{
    ViewData["Title"] = "AddActor";
}

<h1>Adding actor...    </h1>
<hr />

<div class="row bg-dark" id="addActorRow_Id">
    <div class="col-md-5 col-lg-5 col-sm-5 col-xl-5">
        <form asp-action="AddActor" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label text-light"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label text-light"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label text-light"></label>
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="text" name="id" value="@Model" hidden />
                <input type="file" id="fileInput" name="fileUploadMulti" multiple />
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-outline-light" name="Submit" id="SubmitSingle" value="Upload" />
                <input type="submit" value="Create" class="btn btn-outline-info" />
                <a asp-action="Actors" class="btn btn-outline-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Styles {
    <link href="~/css/actors-add.css" rel="stylesheet" />
}